extends layout

block content
  h1= title
  p Use me senpai ^^

  // Wrapper
  #wrapper


    // USER INFO
    #userInfo
      h2 User Info
      p
        strong Name:
        |  <span id='userInfoName'></span>
        br
        strong Age:
        |  <span id='userInfoAge'></span>
        br
        strong Gender:
        |  <span id='userInfoGender'></span>
        br
        strong Location:
        |  <span id='userInfoLocation'></span>
    // /USER INFO


    // TOPIC LIST
    h2 Current Hawt Topics
    #topicList
      table
        tbody
    // /TOPIC LIST

    // ADD TOPIC
    h2 Add Topic
    #addTopic
      fieldset
        input#inputTopic(type='text', placeholder='Topic')
        button#btnAddTopic Add Topic
    // /ADD TOPIC



    // USER LIST
    h2 User List
    #userList
      table
        thead
          th UserName
          th Email
          th Delete?
        tbody
    // /USER LIST


    // ADD USER
    h2 Add User
    #addUser
      fieldset
        input#inputUserName(type='text', placeholder='Username')
        input#inputUserEmail(type='text', placeholder='Email')
        br
        input#inputUserFullname(type='text', placeholder='Full Name')
        input#inputUserAge(type='text', placeholder='Age')
        br
        input#inputUserLocation(type='text', placeholder='Location')
        input#inputUserGender(type='text', placeholder='gender')
        br
        button#btnAddUser Add User
    // /ADD USER


  // /WRAPPER

